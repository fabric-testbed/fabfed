variable:
  - fabric_site:
      default: WASH

provider:
  - fabric:
    - fabric_provider:
         credential_file: ~/.fabfed/fabfed_credentials.yml
         profile: fabric
resource:
  - node:
      - fabric_node:
            provider:  '{{ fabric.fabric_provider }}'
            site: '{{ var.fabric_site }}' 
            count: 1
            image: default_rocky_8
            nic_model: NIC_Basic
            flavor: {'cores': 2, 'ram': 8, 'disk': 10}

resource:
  - node:
      - fabric_node:
          provider: '{{ fabric.fabric_provider }}'
          site: '{{ var.fabric_site }}'
          count: 1 
          image: default_rocky_8
          nic_model: NIC_ConnectX_5

      - chi_node:
          provider: '{{ chi.chi_provider }}'
          site: '{{ var.chi_site }}'
          image: CC-Ubuntu20.04
          network: '{{ network.chi_network }}'
          count: 1
          flavor: m1.medium
